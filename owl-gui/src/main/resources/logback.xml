<configuration>

  <appender name="cout" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%-5level %logger{36} - %msg [%thread{10}]%n</pattern>
    </encoder>
  </appender>

  <root level="debug">
    <appender-ref ref="cout"/>
  </root>

</configuration> <!--

